<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.coreclouet.mypokedex.ui.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_pokedexFragment"
            app:destination="@id/pokedexFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pokedexFragment"
        android:name="com.coreclouet.mypokedex.ui.PokedexFragment"
        android:label="@string/pokedex"
        tools:layout="@layout/pokedex_fragment">
        <action
            android:id="@+id/action_pokedexFragment_to_pokemonFragment"
            app:destination="@id/pokemonFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pokemonFragment"
        android:name="com.coreclouet.mypokedex.ui.PokemonFragment"
        android:label="@string/pokemon"
        tools:layout="@layout/pokemon_fragment" />
</navigation>